<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5">

        <TextView
            android:fontFamily="@font/lato_medium"
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_confirm_address_edit"
            android:layout_toStartOf="@+id/tv_confirm_address_edit"
            android:text="@string/delivery_address"
            android:textColor="@color/black" />

        <TextView
            android:fontFamily="@font/lato_medium"
            android:id="@+id/tv_confirm_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/space_5"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:fontFamily="@font/lato_medium"
            android:id="@+id/tv_confirm_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10"
            android:text="@string/no_address_found" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5">

        <TextView
            android:fontFamily="@font/lato_medium"
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_confirm_billing_edit"
            android:layout_toStartOf="@+id/tv_confirm_billing_edit"
            android:text="@string/billing_address"
            android:textColor="@color/black" />

        <TextView
            android:fontFamily="@font/lato_medium"
            android:id="@+id/tv_confirm_billing_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/space_5"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <TextView
                android:fontFamily="@font/lato_medium"
                android:id="@+id/tv_confirm_address_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:fontFamily="@font/lato_medium"
                android:id="@+id/tv_confirm_address_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:fontFamily="@font/lato_medium"
                android:id="@+id/tv_confirm_address_bill_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_address_found" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>