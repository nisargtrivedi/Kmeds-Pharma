<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="codecanyon.jagatpharma.ForgotActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <include layout="@layout/include_image" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_50"
                app:srcCompat="@drawable/app_top_logo" />
            <TextView
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/space_20"
                android:textColor="@color/black"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"></TextView>

            <TextView
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/lato_medium"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_50"
                android:gravity="center"
                android:text="@string/forgot_note_2"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/lato_medium"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_forgot_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_50"
                android:backgroundTint="@color/black"
                android:textColorHint="@color/black">

                <EditText
                    android:fontFamily="@font/lato_medium"
                    android:paddingLeft="@dimen/_10sdp"
                    android:id="@+id/et_forgot_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/xml_rect"
                    android:ems="10"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_bg"
                    android:theme="@style/edittext_white" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/lato_medium"
                android:id="@+id/btn_forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/xml_rounded_corner_blue_two"
                android:text="@string/submit"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
