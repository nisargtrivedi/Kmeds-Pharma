<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_header_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/lato_medium"
                android:id="@+id/tv_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:text="TextView"
                android:layout_toLeftOf="@id/iv_header_edit"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_header_edit"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_menu_edit" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/space_10"
            android:fontFamily="@font/lato_regular"
            android:id="@+id/tv_header_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white" />

        <ImageView
            android:layout_gravity="top|right"
            android:id="@+id/iv_header_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_home" />


    </LinearLayout>

</LinearLayout>
